<%- include('../layouts/head') %>
    <link rel="stylesheet" href="/admin.css">
    </head>

        <%- include('../layouts/navigation') %>
            <h3>Update Product Page</h3><br />
            <form action='/admin/edit-product' class="main-form" method='POST' enctype="multipart/form-data">
                <label for="title">Title</label>
                <input type='text' name='title' id="title" value="<%= product.title %>" /><br>

                <!-- <label for="imageUrl">Image URL</label>
                <input type='text' name='imageUrl' id="imageUrl" value="<%= product.imageUrl %>" /><br> -->

                <label for="image">Image URL</label>
                <input type='file' name='image' id="image"  /><br>


                <label for="title">Price</label>
                <input type='text' name='price' id="price" value="<%= product.price %>" /><br>

                <label for="title">Description</label>
                <textarea type='text' name='description' id="description"
                    rows="5"> <%= product.description %> </textarea><br>
                
                    <input type="hidden" name="_csrf" value="<%= csrf %>">
                <input type='hidden' name='productId' id="prodictId" value="<%= product._id %>" />

                <button type='submit'>Edit Product</button>

            </form>

