    <body>
        <%- include('../layouts/navigation') %>
            <h3>In Admin Page</h3><br />
            <form action='/admin/add-product' class="main-form" method='POST'><br>
                <label for="title">Title</label>
                <input type='text' name='title' id="title" />

                <label for="imageUrl">Image URL</label>
                <input type='text' name='imageUrl' id="imageUrl" /><br>

                <label for="title">Price</label>
                <input type='number' name='price' id="price" /><br>

                <label for="title">Description</label>
                <textarea type='text' name='description' style="border-radius: 5px;" id="description" rows="5"></textarea><br>
                <input type="hidden" name="_csrf" value="<%= csrf %>">
                <button type='submit'>Add Product</button>
            </form>

